<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paulabetancur.practica2.DiscoProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/white"
        android:id="@+id/iFotodisco"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        android:background="@color/gray"
        android:alpha="0.3"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        android:textSize="20sp"
        android:id="@+id/tInfod"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="@color/whitesmoke"

        android:text="Información de la discoteca
Precio
"/>
    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/rating_bar_profile"
        android:rating="5"
        android:stepSize="0.2"
        android:numStars="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="173dp"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="130dp"
        app:backgroundTint="@color/moradopro"
        app:srcCompat="@drawable/plus_icon"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginTop="190dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:textSize="15sp"
                android:text="hola"

                android:id="@+id/tDescripcion"
                />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/lReseñas"
                android:layout_marginTop="70dp"></ListView>
        </LinearLayout>


    </ScrollView>

</FrameLayout>
